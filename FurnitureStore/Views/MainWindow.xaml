<Window x:Class="FurnitureStore.Windows.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:material="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:local="clr-namespace:FurnitureStore.Windows.Views"
        xmlns:furniture="clr-namespace:FurnitureStore.Infrastructure.Services.FurnitureItems"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="1000">
    
    <Grid>
        <!--<Grid x:Name="TopNavigation" Height="80" Background="#1976D2" VerticalAlignment="Top">
            <Grid x:Name="AppName">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
