                <TextBlock Padding="30,0,0,0" FontSize="22" FontWeight="Bold" Foreground="#FFFFFF" Grid.Row="1" Text="Furniture Store" />
            </Grid>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Width="250">
                <TextBlock Text="Dominik Michalski" Foreground="#FFFFFF" Margin="15,15,15,15" FontSize="16" HorizontalAlignment="Left" VerticalAlignment="Center" />
